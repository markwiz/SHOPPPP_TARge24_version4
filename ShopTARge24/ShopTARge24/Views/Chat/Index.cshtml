@{
    ViewData["Title"] = "Chat";
}

<div class="card page-card shadow-sm">
    <div class="card-header p-4">
        <h1 class="page-title h3 m-0">Realtime Chat</h1>
        <div class="page-subtitle small mt-1">SignalR live messages with details toggle.</div>
    </div>

    <div class="card-body p-4">
        <div class="row g-3">
            <div class="col-12 col-lg-4">
                <div class="card border-0" style="background: rgba(255,255,255,.7); border-radius: 16px;">
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="userInput" class="form-label fw-semibold">Your name</label>
                            <input id="userInput" class="form-control" placeholder="Anonymous" />
                        </div>
                        <div class="mb-3">
                            <label for="messageInput" class="form-label fw-semibold">Message</label>
                            <input id="messageInput" class="form-control" placeholder="Type something…" />
                        </div>
                        <button id="sendButton" class="btn btn-primary w-100">Send</button>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-8">
                <div class="card border-0" style="background: rgba(255,255,255,.7); border-radius: 16px;">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div class="fw-semibold">Messages</div>
                            <div class="small text-muted">Newest at bottom</div>
                        </div>
                        <ul id="messagesList" class="list-group"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .build();

        connection.on("ReceiveMessage", function (user, message, time) {
            const messagesList = document.getElementById("messagesList");

            const li = document.createElement("li");
            li.className = "list-group-item";

            const mainRow = document.createElement("div");
            mainRow.className = "d-flex justify-content-between align-items-center";

            const textSpan = document.createElement("span");
            textSpan.textContent = `${user}: ${message}`;

            const detailsButton = document.createElement("button");
            detailsButton.className = "btn btn-sm btn-outline-secondary";
            detailsButton.textContent = "Details";

            const metaDiv = document.createElement("div");
            metaDiv.className = "small text-muted mt-1";
            metaDiv.textContent = `Sent by ${user} at ${time}`;
            metaDiv.style.display = "none";

            detailsButton.addEventListener("click", function () {
                metaDiv.style.display = metaDiv.style.display === "none" ? "block" : "none";
            });

            mainRow.appendChild(textSpan);
            mainRow.appendChild(detailsButton);

            li.appendChild(mainRow);
            li.appendChild(metaDiv);

            messagesList.appendChild(li);
        });

        connection.start().catch(function (err) {
            console.error(err.toString());
        });

        function sendMessage() {
            const user = document.getElementById("userInput").value || "Anonymous";
            const message = document.getElementById("messageInput").value;

            if (message.trim() === "") return;

            connection.invoke("SendMessage", user, message)
                .catch(function (err) {
                    console.error(err.toString());
                });

            document.getElementById("messageInput").value = "";
        }

        document.getElementById("sendButton").addEventListener("click", function (event) {
            sendMessage();
            event.preventDefault();
        });

        document.getElementById("messageInput").addEventListener("keyup", function (event) {
            if (event.key === "Enter") sendMessage();
        });
    </script>
}

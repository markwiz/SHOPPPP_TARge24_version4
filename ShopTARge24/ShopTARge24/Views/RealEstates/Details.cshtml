@model ShopTARge24.Models.RealEstates.RealEstateDetailsViewModel

<div class="card page-card shadow-sm">
    <div class="card-header p-4">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
            <div>
                <h1 class="page-title h3 m-0">Real Estate Details</h1>
                <div class="page-subtitle small mt-1">Read-only view of the property.</div>
            </div>
            <a asp-action="Index" asp-controller="RealEstates" class="btn btn-outline-secondary btn-sm">Back</a>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="card form-card">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12 col-md-4">
                        <div class="small text-muted">Id</div>
                        <div class="fw-semibold">@Model.Id</div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="small text-muted">Area</div>
                        <div class="fw-semibold">@Model.Area</div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="small text-muted">RoomNumber</div>
                        <div class="fw-semibold">@Model.RoomNumber</div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="small text-muted">Location</div>
                        <div class="fw-semibold">@Model.Location</div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="small text-muted">BuildingType</div>
                        <div class="fw-semibold">@Model.BuildingType</div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="small text-muted">CreatedAt</div>
                        <div class="fw-semibold">@Model.CreatedAt</div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="small text-muted">ModifiedAt</div>
                        <div class="fw-semibold">@Model.ModifiedAt</div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Image != null && Model.Image.Any())
        {
            <hr class="my-4" />
            <div class="fw-semibold mb-2">Images</div>
            <div class="row g-3 image-grid">
                @foreach (var images in Model.Image)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="thumb">
                            <partial name="_Images" model="images" />
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

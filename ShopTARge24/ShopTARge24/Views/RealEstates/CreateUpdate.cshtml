@model ShopTARge24.Models.RealEstates.RealEstateCreateUpdateViewModel

@{
    bool isEdit = Model.Id.HasValue;
    string title = isEdit ? "Update Real Estate" : "Create Real Estate";
    string subtitle = isEdit ? "Edit details and manage images." : "Add a new property and upload images.";
}

<div class="card page-card shadow-sm">
    <div class="card-header p-4">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
            <div>
                <h1 class="page-title h3 m-0">@title</h1>
                <div class="page-subtitle small mt-1">@subtitle</div>
            </div>
            <a asp-action="Index" asp-controller="RealEstates" class="btn btn-outline-secondary btn-sm">Back</a>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="card form-card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" class="row g-3">
                    @Html.AntiForgeryToken()

                    <input asp-for="Id" type="hidden" />
                    <input asp-for="CreatedAt" type="hidden" />
                    <input asp-for="ModifiedAt" type="hidden" />

                    <div class="col-12 col-md-4">
                        <label asp-for="Area" class="form-label"></label>
                        <input asp-for="Area" class="form-control" />
                        <span asp-validation-for="Area" class="text-danger small"></span>
                    </div>

                    <div class="col-12 col-md-8">
                        <label asp-for="Location" class="form-label"></label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger small"></span>
                    </div>

                    <div class="col-12 col-md-4">
                        <label asp-for="RoomNumber" class="form-label"></label>
                        <input asp-for="RoomNumber" class="form-control" />
                        <span asp-validation-for="RoomNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-12 col-md-8">
                        <label asp-for="BuildingType" class="form-label"></label>
                        <input asp-for="BuildingType" class="form-control" />
                        <span asp-validation-for="BuildingType" class="text-danger small"></span>
                    </div>

                    <div class="col-12 col-md-8">
                        <label asp-for="Files" class="form-label"></label>
                        <input asp-for="Files" multiple type="file" class="form-control" />
                        <div class="form-text">You can upload multiple images.</div>
                    </div>

                    <div class="col-12 d-flex gap-2">
                        @if (isEdit)
                        {
                            <input asp-action="Update" asp-controller="RealEstates" type="submit" class="btn btn-success" value="Update" />
                        }
                        else
                        {
                            <input asp-action="Create" asp-controller="RealEstates" type="submit" class="btn btn-primary" value="Create" />
                        }

                        <a asp-action="Index" asp-controller="RealEstates" class="btn btn-outline-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>

        @* Images *@
        @if (Model.Images != null && Model.Images.Any())
        {
            <hr class="my-4" />
            <div class="fw-semibold mb-2">Images</div>

            <div class="row g-3 image-grid">
                @foreach (var image in Model.Images)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="thumb">
                            <partial name="_Images" model="image" />
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@model ShopTARge24.Models.Spaceships.SpaceshipCreateUpdateViewModel

@{
    bool isEdit = Model.Id.HasValue;
    string title = isEdit ? "Update Spaceship" : "Create Spaceship";
    string subtitle = isEdit ? "Edit details and manage images." : "Add a new ship and upload images.";
}

<div class="card page-card shadow-sm">
    <div class="card-header p-4">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
            <div>
                <h1 class="page-title h3 m-0">@title</h1>
                <div class="page-subtitle small mt-1">@subtitle</div>
            </div>
            <a asp-action="Index" asp-controller="Spaceships" class="btn btn-outline-secondary btn-sm">Back</a>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="card form-card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" class="row g-3">
                    @Html.AntiForgeryToken()

                    <input asp-for="Id" type="hidden" />
                    <input asp-for="CreatedAt" type="hidden" />
                    <input asp-for="ModifiedAt" type="hidden" />

                    <div class="col-12 col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Odyssey" />
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Classification" class="form-label"></label>
                        <input asp-for="Classification" class="form-control" placeholder="e.g. Explorer / Cargo / Fighter" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label asp-for="BuiltDate" class="form-label"></label>
                        <input asp-for="BuiltDate" class="form-control" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label asp-for="Crew" class="form-label"></label>
                        <input asp-for="Crew" class="form-control" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label asp-for="EnginePower" class="form-label"></label>
                        <input asp-for="EnginePower" class="form-control" />
                    </div>

                    <div class="col-12 col-md-8">
                        <label asp-for="Files" class="form-label"></label>
                        <input class="form-control" asp-for="Files" multiple type="file" />
                        <div class="form-text">You can upload multiple images.</div>
                    </div>

                    <div class="col-12 d-flex gap-2">
                        @if (isEdit)
                        {
                            <input asp-action="Update" asp-controller="Spaceships" type="submit" class="btn btn-success" value="Update" />
                        }
                        else
                        {
                            <input asp-action="Create" asp-controller="Spaceships" type="submit" class="btn btn-primary." value="Create" />
                        }

                        <a asp-action="Index" asp-controller="Spaceships" class="btn btn-outline-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.Image != null && Model.Image.Any())
        {
            <hr class="my-4" />
            <div class="fw-semibold mb-2">Images</div>

            <div class="row g-3 image-grid">
                @foreach (var img in Model.Image)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="thumb">
                            <partial name="_Images" model="img" />
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

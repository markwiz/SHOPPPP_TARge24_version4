@model ShopTARge24.Models.Spaceships.SpaceshipDeleteViewModel

<div class="card page-card shadow-sm">
    <div class="card-header p-4">
        <h1 class="page-title h3 m-0">Delete Spaceship</h1>
        <div class="page-subtitle small mt-1">This action cannot be undone.</div>
    </div>

    <div class="card-body p-4">
        <div class="alert alert-danger">
            <div class="fw-semibold">Are you sure you want to delete this spaceship?</div>
            <div class="small">Deleting will remove the ship and its data.</div>
        </div>

        <div class="card form-card">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <div class="small text-muted">Id</div>
                        <div class="fw-semibold">@Model.Id</div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="small text-muted">Name</div>
                        <div class="fw-semibold">@Model.Name</div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="small text-muted">Classification</div>
                        <div class="fw-semibold">@Model.Classification</div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="small text-muted">BuiltDate</div>
                        <div class="fw-semibold">@Model.BuiltDate</div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="small text-muted">Crew</div>
                        <div class="fw-semibold">@Model.Crew</div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="small text-muted">EnginePower</div>
                        <div class="fw-semibold">@Model.EnginePower</div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="small text-muted">CreatedAt</div>
                        <div class="fw-semibold">@Model.CreatedAt</div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="small text-muted">ModifiedAt</div>
                        <div class="fw-semibold">@Model.ModifiedAt</div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.ImageViewModels != null && Model.ImageViewModels.Any())
        {
            <hr class="my-4" />
            <div class="fw-semibold mb-2">Images</div>

            <div class="row g-3 image-grid">
                @foreach (var img in Model.ImageViewModels)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="thumb">
                            <partial name="_Images" model="img" />
                        </div>
                    </div>
                }
            </div>
        }

        <hr class="my-4" />

        <form asp-action="DeleteConfirmation" class="d-flex gap-2">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" asp-controller="Spaceships" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>

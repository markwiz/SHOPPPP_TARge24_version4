<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopTARge24</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShopTARge24.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        string? ctrl = ViewContext.RouteData.Values["controller"]?.ToString();

        string ActiveCtrl(string name) =>
        string.Equals(ctrl, name, StringComparison.OrdinalIgnoreCase) ? "active" : "";

        string ActiveCtrlAny(params string[] names) =>
        names.Any(n => string.Equals(ctrl, n, StringComparison.OrdinalIgnoreCase)) ? "active" : "";
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top shadow-sm">
            <div class="container-xxl">
                <a class="navbar-brand fw-semibold d-flex align-items-center gap-2"
                   asp-controller="Home" asp-action="Index">
                    <span class="brand-badge">ST</span>
                    <span>ShopTARge24</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto align-items-lg-center gap-lg-1">
                        <li class="nav-item">
                            <a class="nav-link @ActiveCtrl("Home")" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @ActiveCtrlAny("Spaceships", "RealEstates", "Kindergarten", "AccuWeathers", "ChuckNorris", "CockTails", "Chat")"
                               href="#" id="modulesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Modules
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="modulesDropdown">
                                <li><a class="dropdown-item @ActiveCtrl("Spaceships")" asp-controller="Spaceships" asp-action="Index">Spaceships</a></li>
                                <li><a class="dropdown-item @ActiveCtrl("RealEstates")" asp-controller="RealEstates" asp-action="Index">Real Estates</a></li>
                                <li><a class="dropdown-item @ActiveCtrl("Kindergarten")" asp-controller="Kindergarten" asp-action="Index">Kindergarten</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item @ActiveCtrl("AccuWeathers")" asp-controller="AccuWeathers" asp-action="Index">AccuWeather</a></li>
                                <li><a class="dropdown-item @ActiveCtrl("ChuckNorris")" asp-controller="ChuckNorris" asp-action="Index">Chuck Norris</a></li>
                                <li><a class="dropdown-item @ActiveCtrl("CockTails")" asp-controller="CockTails" asp-action="Index">CockTails</a></li>
                                <li><a class="dropdown-item @ActiveCtrl("Chat")" asp-controller="Chat" asp-action="Index">Chat</a></li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-lg-center gap-2">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="nav-link user-chip">
                                    <span class="avatar-dot"></span>
                                    <span class="text-truncate" style="max-width: 220px;">@User.Identity!.Name</span>
                                </span>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Accounts" asp-action="Logout" method="post" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-secondary btn-sm">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary btn-sm" asp-controller="Accounts" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-controller="Accounts" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-xxl">
        <main role="main" class="pb-4 pt-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ShopTARge24 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

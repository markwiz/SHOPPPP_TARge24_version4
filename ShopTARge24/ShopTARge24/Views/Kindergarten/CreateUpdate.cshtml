@model ShopTARge24.Models.Kindergarten.KindergartenCreateUpdateViewModel

@{
    bool isEdit = Model.Id.HasValue;
    string title = isEdit ? "Update Kindergarten" : "Create Kindergarten";
    string subtitle = isEdit ? "Edit details and manage images." : "Add a new record and upload images.";
}

<div class="card page-card shadow-sm">
    <div class="card-header p-4">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
            <div>
                <h1 class="page-title h3 m-0">@title</h1>
                <div class="page-subtitle small mt-1">@subtitle</div>
            </div>
            <a asp-action="Index" asp-controller="Kindergarten" class="btn btn-outline-secondary btn-sm" id="kinder-back-top">
                Back
            </a>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="card form-card">
            <div class="card-body">
                <form asp-action="@(isEdit ? "Update" : "Create")"
                      asp-controller="Kindergarten"
                      method="post"
                      enctype="multipart/form-data"
                      class="row g-3">
                    @Html.AntiForgeryToken()

                    <input asp-for="Id" type="hidden" id="kinder-id" />
                    <input asp-for="CreatedAt" type="hidden" id="kinder-created" />
                    <input asp-for="ModifiedAt" type="hidden" id="kinder-modified" />

                    <div class="col-12 col-md-4">
                        <label asp-for="Nr" class="form-label"></label>
                        <input asp-for="Nr" class="form-control" id="kinder-nr" />
                    </div>

                    <div class="col-12 col-md-8">
                        <label asp-for="GroupName" class="form-label"></label>
                        <input asp-for="GroupName" class="form-control" id="kinder-groupname" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label asp-for="ChildrenCount" class="form-label"></label>
                        <input asp-for="ChildrenCount" class="form-control" id="kinder-childcount" />
                        <span asp-validation-for="ChildrenCount" class="text-danger small"></span>
                    </div>

                    <div class="col-12 col-md-8">
                        <label asp-for="KindergartenName" class="form-label"></label>
                        <input asp-for="KindergartenName" class="form-control" id="kinder-name" />
                    </div>

                    <div class="col-12 col-md-8">
                        <label asp-for="TeacherName" class="form-label"></label>
                        <input asp-for="TeacherName" class="form-control" id="kinder-teacher" />
                    </div>

                    <div class="col-12 col-md-8">
                        <label asp-for="Files" class="form-label"></label>
                        <input asp-for="Files" multiple type="file" class="form-control" id="kinder-files" />
                        <div class="form-text">You can upload multiple images.</div>
                    </div>

                    <div class="col-12 d-flex gap-2">
                        <button type="submit" class="btn btn-primary" id="kinder-submit">
                            @(isEdit ? "Update" : "Create")
                        </button>
                        <a asp-action="Index" asp-controller="Kindergarten" class="btn btn-outline-secondary" id="kinder-back">
                            Back
                        </a>
                    </div>
                </form>
            </div>
        </div>

        @if (isEdit && Model.Images != null && Model.Images.Any())
        {
            <hr class="my-4" />

            <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-2">
                <div class="fw-semibold">Images</div>
                <div class="small text-muted">Click delete to remove an image.</div>
            </div>

            <div class="row g-3 image-grid">
                @foreach (var image in Model.Images)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="thumb">
                            <img src="@image.Image" alt="@image.ImageTitle" />
                            <div class="caption d-flex align-items-center justify-content-between gap-2">
                                <div class="small text-truncate" style="max-width: 70%;">@image.ImageTitle</div>

                                <form asp-action="RemoveImage"
                                      asp-controller="Kindergarten"
                                      asp-route-imageId="@image.ImageId"
                                      asp-route-kindergartenId="@Model.Id"
                                      method="post"
                                      class="m-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Delete this image?');">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else if (isEdit)
        {
            <hr class="my-4" />
            <div class="text-muted small">No images available.</div>
        }
    </div>
</div>

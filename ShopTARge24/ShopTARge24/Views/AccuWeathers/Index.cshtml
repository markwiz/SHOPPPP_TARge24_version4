@model ShopTARge24.Models.AccuWeathers.AccuWeathersSearchViewModel

<div class="card page-card shadow-sm">
    <div class="card-header p-4">
        <h1 class="page-title h3 m-0">AccuWeather</h1>
        <div class="page-subtitle small mt-1">Search the forecast for a city.</div>
    </div>

    <div class="card-body p-4">
        <div class="card form-card">
            <div class="card-body">
                <form method="post" asp-controller="AccuWeathers" asp-action="searchCity" class="row g-3">
                    @Html.AntiForgeryToken()

                    <div class="col-12 col-md-6 col-lg-5">
                        <label asp-for="CityName" class="form-label">City name</label>
                        <input asp-for="CityName" class="form-control" placeholder="e.g. Tallinn" />
                        <span asp-validation-for="CityName" class="text-danger small"></span>
                    </div>

                    <div class="col-12 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Search</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

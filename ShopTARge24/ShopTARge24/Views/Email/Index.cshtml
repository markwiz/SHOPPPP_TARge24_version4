@model ShopTARge24.Models.Email.EmailViewModel

<div>
    <form method="post" enctype="multipart/form-data">

        <div class="form-group row">
            <label asp-for="To" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="To" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Subject" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="Subject" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Body" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <textarea asp-for="Body" class="form-control"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Attachment" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="Attachment" class="form-control" multiple="multiple" type="file"/>
            </div>
        </div>

        <input asp-action="sendEmail" asp-controller="email" type="submit" class="btn btn-primary" value="Send Email" />
    </form>
</div>
